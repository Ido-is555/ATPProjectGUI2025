<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- root -->
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="View.MyViewController">

    <!-- ─────────────── top : menu bar ─────────────── -->
    <top>
        <fx:include source="CommonMenu.fxml"/>
    </top>

    <!-- ─────────────── center : maze canvas ─────────────── -->
    <center>
        <Canvas fx:id="mazeCanvas"
        width="600.0" height="600.0"
        onKeyPressed="#onKeyPressed"/>
    </center>

    <!-- ─────────────── bottom : “Give Up” button ─────────────── -->
    <bottom>
        <HBox alignment="CENTER" spacing="10.0">
            <!-- Padding option 3: תגית Insets מלאה -->
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Button fx:id="btnGiveUp"
                    text="Show Solution"
                    onAction="#onGiveUp"/>

             <!-- New-Game button: starts hidden -->
        <Button fx:id="btnNewGame"
                text="New Game"
                onAction="#onNewGame"
                visible="false"   managed="false"/>

        </HBox>
    </bottom>

</BorderPane>
