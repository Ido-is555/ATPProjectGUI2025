<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- root -->
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="View.MyViewController">

    <!-- ─────────────── top : menu bar ─────────────── -->
    <top>
        <MenuBar>
            <Menu text="File">
                <MenuItem fx:id="menuNew"   text="New"   onAction="#onNew"/>
                <MenuItem fx:id="menuSave"  text="Save"  onAction="#onSave"/>
                <SeparatorMenuItem/>
                <MenuItem fx:id="menuExit"  text="Exit"  onAction="#onExit"/>
            </Menu>

            <Menu text="Options">
                <!-- “Properties” פותח שוב את מסך ההגדרות -->
                <MenuItem fx:id="menuProperties" text="Properties" onAction="#onNew"/>
            </Menu>

            <Menu text="Help">
                <MenuItem fx:id="menuHelp"  text="Help"/>
                <MenuItem fx:id="menuAbout" text="About"/>
            </Menu>
        </MenuBar>
    </top>

    <!-- ─────────────── center : maze canvas ─────────────── -->
    <center>
        <Canvas fx:id="mazeCanvas"
        width="600.0" height="600.0"
        onKeyPressed="#onKeyPressed"/>
    </center>

    <!-- ─────────────── bottom : “Give Up” button ─────────────── -->
    <bottom>
        <HBox alignment="CENTER" spacing="10.0">
            <!-- Padding option 3: תגית Insets מלאה -->
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Button fx:id="btnGiveUp"
                    text="Give Up"
                    onAction="#onGiveUp"/>
        </HBox>
    </bottom>

</BorderPane>
