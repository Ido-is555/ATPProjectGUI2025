<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="View.PropertiesController">

    <top>
        <fx:include source="CommonMenu.fxml"/>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="25">
            <GridPane hgap="10" vgap="10">
                <Label text="Rows:"        GridPane.columnIndex="50" GridPane.rowIndex="0"/>
                <TextField fx:id="txtRows" GridPane.columnIndex="60" GridPane.rowIndex="0" prefWidth="80"/>
                <Label text="Cols:"        GridPane.columnIndex="50" GridPane.rowIndex="1"/>
                <TextField fx:id="txtCols" GridPane.columnIndex="60" GridPane.rowIndex="1" prefWidth="80"/>
            </GridPane>
            <Button fx:id="btnPlay" text="Play" onAction="#onPlayClicked"/>
        </VBox>
    </center>

</BorderPane>